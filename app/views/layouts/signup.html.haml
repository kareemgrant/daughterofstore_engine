%html{:lang => "en", :xhmns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en"}
  %head
    %title= full_title(yield(:title))
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag    "application", "https://fonts.googleapis.com/css?family=Questrial|Damion"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
  %body
    = render :partial => "shared/signup_flash_messages", :locals => {:flash => flash}
    = yield
