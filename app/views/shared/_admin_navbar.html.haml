      .navbar-inner
        = link_to 'Shopmazing', root_path, class: "brand admin-brand"
        %ul#admin-menu
          %li= admin_navbar_link 'Dashboard', store_admin_path, %w( admin_header_link dashboard )

          %li= admin_navbar_link 'Orders', store_admin_orders_path(current_store), %w( admin_header_link dashboard )
