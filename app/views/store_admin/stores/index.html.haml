.row-fluid
  .tabbable
    %ul.nav.nav-tabs
      %li.active
        = link_to "Your Stores", store_admin_stores_path(current_user)
.row-fluid
  .span12
    %table.table.table-striped.table-bordered.cart-detail
      %thead
        %tr
          %th.span4 Store
          %th.span4 Role
      %tbody
        - @stores.each do |store|
          %tr
            %td= link_to store.name, store_admin_path(store)
            %td Add Role
