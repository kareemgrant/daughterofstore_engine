- provide(:title, 'Admin Edit Category')

%section#right-pane 
  .row.admin-header
    .span12
      %h3
        #{current_store.name.titleize}'s Categories


  .row-fluid
    .span12
      .span6
        %h3 Edit Existing Category
  -# = render 'form'
  = simple_form_for [:store_admin, @category], :url => store_admin_category_path(current_store, @category)  do |f|
    = f.error_notification
    = f.input :name, input_html: {class: "span6"}
    .form-actions
      = f.button :submit, :class => 'btn-primary'
      = submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger"
    = f.error :base
